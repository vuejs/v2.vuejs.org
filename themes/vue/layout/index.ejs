<main role="main">
  <div class="sidebar">
    <div class="sidebar-inner-index">
      <ul class="main-menu">
        <%- partial('partials/main_menu', { context: 'sidebar' }) %>
      </ul>
    </div>
  </div>

  <div id="hero">
    <div class="inner">
      <div class="left">
        <img class="hero-logo" src="<%- url_for("/images/logo.svg") %>" alt="Vue logo">
      </div><div class="right">
        <h2 class="vue">Vue.js</h2>
        <h1>
          Progresywny<br>Framework JavaScript
        </h1>
        <p>
          <a id="modal-player" class="button has-icon" href="javascript:;">
            <%- partial('icons/play') %>
            DLACZEGO VUE.JS?</a>
          <a class="button white" href="<%- url_for("/v2/guide/") %>">ZACZNIJ</a>
          <a class="button gray has-icon" href="https://github.com/vuejs/vue" target="_blank" rel="noopener">
            <%- partial('icons/github-dark') %>
            GITHUB</a>
        </p>
      </div>
    </div>
  </div>

  <div id="special">
    <h3>Specjalni Sponsorzy</h3>
    <% var specialSponsor = theme.special_sponsors[0]; %>
    <a href="<%- specialSponsor.url %>" target="_blank" rel="noopener sponsored">
      <img src="<%- url_for(`/images/${specialSponsor.img}`) %>" style="width:160px" alt="Code.xyz Logo">
      <br>
      <span><%- specialSponsor.description %></span>
    </a>
  </div>

  <div id="highlights">
    <div class="inner">
      <div class="point">
        <h2>Przystępny</h2>
        <p>Znasz już HTML, CSS i JavaScript? Przeczytaj przewodnik i zacznij budować niesamowite rzeczy w krótkim czasie!</p>
      </div>

      <div class="point">
        <h2>Wszechstronny</h2>
        <p>Ekosystem skalujący się wraz z twoją aplikacją między biblioteką a pełnoprawnym frameworkiem.</p>
      </div>

      <div class="point">
        <h2>Wydajny</h2>
        <p>
          20KB min+gzip Runtime<br>
          Blazing Fast Virtual DOM<br>
          Minimal Optimization Efforts
        </p>
      </div>
    </div>
  </div>

  <div id="sponsors">
    <div class="inner">
      <%- partial('partials/sponsors') %>
    </div>
  </div>

  <div id="news">
    <div class="inner">
      <h3><label for="member_email">Subskrybuj nasz cotygodniowy Newsletter</label></h3>
      <form
        class="newsletter-form"
        id="revue-form"
        name="revue-form"
        target="_blank"
        rel="noopener"
        action="https://www.getrevue.co/profile/vuenewsletter/add_subscriber"
        method="post"
        @submit="subscribe"
      >
        <input
          class="newsletter-input"
          type="email"
          name="member[email]"
          id="member_email"
          required
          placeholder="Email address"
        >
        <input
          class="button newsletter-button"
          type="submit"
          value="Subscribe"
          name="member[subscribe]"
          id="member_submit"
        >
      </form>
      <p>
        Możesz przeczytać poprzednie wydania oraz posłuchać naszego podcastu na <a href="https://news.vuejs.org" target="_blank" rel="noopener">news.vuejs.org</a>.
      </p>
    </div>
  </div>
</main>

